{
  "version": "0.0.0-semntically-released",
  "name": "ddb-migrate",
  "description": "Manage AWS DynamoDB migrations with ease.",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "export NODE_ENV=test && mocha --require ./__tests__/test_helper.js --recursive ./__tests__/tests",
    "test:watch": "npm run test -- --watch",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sdelrio0/ddb-migrate.git"
  },
  "keywords": [
    "aws",
    "dynamodb",
    "dynamo",
    "db",
    "migrate",
    "manage"
  ],
  "author": "Sergio <sdelrio0@gmail.com> (http://xilix.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sdelrio0/ddb-migrate/issues"
  },
  "homepage": "https://github.com/sdelrio0/ddb-migrate#readme",
  "bin": {
    "ddb": "lib/index.js"
  },
  "preferGlobal": true,
  "dependencies": {
    "aws-sdk": "^2.5.0",
    "bluebird": "^3.4.1",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "commitizen": "^2.8.5",
    "ghooks": "^1.3.2",
    "mocha": "^3.0.2",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test"
    }
  }
}
